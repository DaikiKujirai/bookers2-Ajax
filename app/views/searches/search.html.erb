<h2>Results index</h2>
<!--books一覧 -->
<table class="table table-hover table-inverse">

<% if @range == '2' %>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% if @range == "2" || @book == nil %>
    <%= "一致する検索結果はありません。" %>
  <% end %>
  <% @book.each do |book| %>
  <tbody>
    <tr>
      <td>
        <%= link_to(book.user) do %>
        <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
        <% end %>
      </td>
      <td>
        <%= link_to book.title, book, class: "book_#{book.id}" %>
      </td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
  <% end %>

  <% else %>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% if @range == "1" || @book == nil %>
    <%= "一致する検索結果はありません。" %>
  <% end %>
  <% @user.each do |user| %>
  <tbody>
    <tr>
      <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
    </tr>
  </tbody>
  <% end %>
<% end %>
</table>
